# Papsi Repair Shop - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==================== DATABASE CONFIGURATION ====================
DB_HOST=localhost
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password
DB_NAME=your_database_name

# ==================== CHATBOT API CONFIGURATION ====================
# URL of your Flask chatbot API deployed on Render
# Example: https://papsi-chatbot-api.onrender.com
CHATBOT_API_URL=https://your-render-service.onrender.com

# ==================== APPLICATION SETTINGS ====================
APP_NAME=Papsi Repair Shop
APP_VERSION=2.0.0
APP_URL=https://your-hostinger-domain.com

# ==================== SECURITY SETTINGS ====================
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8

# ==================== EMAIL CONFIGURATION ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_DEV_MODE=false

# ==================== AI/CHATBOT CONFIGURATION ====================
HUGGING_FACE_TOKEN=your_huggingface_token
AI_MODEL_URL=https://api-inference.huggingface.co/models/gpt2
AI_TIMEOUT=10
CHATBOT_SIMILARITY_THRESHOLD=4

# ==================== FILE UPLOAD SETTINGS ====================
UPLOAD_MAX_SIZE=5242880
UPLOAD_PATH=uploads/

# ==================== DEBUG MODE ====================
# Set to false in production!
DEBUG_MODE=false
